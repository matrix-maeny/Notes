<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201F1F"
    android:orientation="vertical"
    tools:context=".NotesEditorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="4dp"
        android:scrollbarThumbVertical="@drawable/backgroud_gradient"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/setNoteHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Heading"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <View
                android:id="@+id/myView"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="#858383" />

            <EditText
                android:id="@+id/enterHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Heading"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#ACACAC"
                android:textColorHint="#686666"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/enterContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Enter content"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:padding="15dp"
                android:textColor="#BDBCBC"
                android:textColorHint="#686666"
                android:textSize="25sp"
                tools:ignore="SpeakableTextPresentCheck" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>